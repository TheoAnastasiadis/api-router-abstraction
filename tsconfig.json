{
    "compilerOptions": {
        "incremental": true,
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ESNEXT",
        "lib": ["ES2019"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noErrorTruncation": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.spec.ts"]
}
